<Board>:
    scroll_distance: 40
<ColorBox>:
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size
<Cell>:
    size_hint: (None, None)
    ColorBox:
        color: root.bg_color_active if root.active else root.bg_color_inactive
    Label:
        text: root.text
        color: root.text_color_active if root.active else root.text_color_inactive
        font_name: root.font_name
        font_size: root.font_size
        text_size: root.size
        pos_hint: {'x': 0, 'y': 0}
        valign: "top"
<ItemView>:
    EditButton:
        font_name: 'assets/Entypo.ttf'
        font_size: 30
        size: (16,16)
        size_hint: (None, None)
        pos_hint: {'right': 1, 'top': 1}
        text: root.character.closet.get_text('@edit')
<CalendarView>:
    Calendar:
        id: cal
        cal_type: root.item_type - 5
        col_width: 100
        keys: root.keys
        font_name: root.font_name
        font_size: root.font_size
        bg_color_inactive: root.bg_color_inactive
        bg_color_active: root.bg_color_active
        text_color_inactive: root.text_color_inactive
        text_color_active: root.text_color_active
    Timeline:
        x: (root.connector.branch - cal.branch) * cal.col_width + cal.xmov
        y: cal.ymov + cal.top - (root.connector.tick - cal.tick) * cal.tick_height
        canvas:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                points: (self.x, self.y, self.x+cal.col_width, self.y)
            Triangle:
                points: (self.x, self.y+8, self.x+16, self.y, self.x, self.y-8)
<TableView>:
    Table:
        item_type: root.item_type
        charatt: root.chartab_dict[self.item_type]
        keys: root.keys
        text_color_inactive: root.text_color_inactive
        colkeys: root.colkey_dict[self.item_type]
        cols: len(self.colkeys)
        character: root.character
        skeliter: root.iterskel_dict[self.item_type]
        font_name: root.font_name
        font_size: root.font_size
        row_default_height: root.font_size + self.spacing[1]
        row_force_default: True
        bg_color_inactive: root.bg_color_inactive
<CharSheetView>:
    pos_hint: {'x': 0.7, 'y': 0}
    size_hint: (0.3, 1)
    StencilView:
        id: view
        CharSheet:
            pos: view.pos
            size: view.size
            cols: 1
            spacing: 10
<EditButton>:
    pos_hint: {'x': 0, 'top': 1}