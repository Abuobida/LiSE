<Board>:
    scroll_distance: 40
<ColorBox>:
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size
<Cell>:
    size_hint: (None, None)
    ColorBox:
        color: root.bg_color
    Label:
        text: root.text
        color: root.text_color
        font_name: root.font_name
        font_size: root.font_size
        text_size: self.size
        pos_hint: {'x': 0, 'y': 0}
        valign: "top"
<CalendarView>:
    Calendar:
        id: cal
        cal_type: root.cal_type
        keys: root.keys
        bg_color: root.bg_color
        text_color: root.text_color
        font_name: root.font_name
        font_size: root.font_size
        col_width: 100
    Timeline:
        x: (root.connector.branch - cal.branch) * cal.col_width + cal.xmov
        y: cal.ymov + cal.top - (root.connector.tick - cal.tick) * cal.tick_height
        canvas:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                points: (self.x, self.y, self.x+cal.col_width, self.y)
            Triangle:
                points: (self.x, self.y+8, self.x+16, self.y, self.x, self.y-8)
<CharSheetView>:
    pos_hint: {'x': 0.7, 'y': 0}
    size_hint: (0.3, 1)
    StencilView:
        id: view
        CharSheet:
            pos: view.pos
            size: view.size
            cols: 1
            spacing: 10
<EditButton>:
    pos_hint: {'x': 0, 'top': 1}