<ColorBox>:
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size
<Cell>:
    id: cell
    size_hint: (None, None)
    ColorBox:
        color: cell.bg_color
    Label:
        text: cell.text
        color: cell.text_color
        font_name: cell.font_name
        font_size: cell.font_size
        text_size: self.size
        pos_hint: {'x': 0, 'y': 0}
        valign: "top"
<Timeline>:
    #:import get_charsheet charsheet.get_charsheet
    connector: get_charsheet(self.calendar).character.closet.kivy_connector
    pos: self.get_pos(self.connector.branch, self.connector.tick)
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Line:
            points: self.get_line_points(*self.pos)
        Triangle:
            points: self.get_wedge_points(*self.pos)
<CharSheet>:
    cols: 1
    spacing: 10
<CharSheetView>:
    StencilView:
        id: view
        pos_hint: {'x': 0.7, 'y': 0.0}
        size_hint: (0.3, 1)
        CharSheet:
            pos: view.pos
            size: view.size