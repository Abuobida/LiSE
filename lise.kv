#:kivy 1.0
<Board>:
	closet: app.closet
<Spot>:
	closet: app.closet
	do_rotation: False
	do_scale: False
	auto_bring_to_front: False
	Image:
		pos: self.parent.get_coords()
		texture: self.parent.get_texture()
<Pawn>:
	closet: app.closet
	do_rotation: False
	do_scale: False
	auto_bring_to_front: False
	Image:
		pos: self.parent.get_pos()
		texture: self.parent.get_texture()
<Menu>:
	closet: app.closet
	orientation: 'vertical'
	spacing: 10
<MenuItem>:
	background_normal: str(self.menu.style.bg_inactive)
	background_down: str(self.menu.style.bg_active)
	font_name: self.menu.style.fontface + '.ttf'
	font_size: self.menu.style.fontsize
FloatLayout:
	Menu:
		name: 'Main'
	Board:
		dimension: app.closet.get_dimension('Physical')